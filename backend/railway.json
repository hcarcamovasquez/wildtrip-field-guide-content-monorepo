{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd .. && pnpm install --frozen-lockfile && pnpm --filter=shared build && cd backend && pnpm build",
    "watchPatterns": [
      "/backend/**",
      "/shared/**"
    ]
  },
  "deploy": {
    "startCommand": "cd backend && pnpm start:prod",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}