{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd .. && pnpm install --frozen-lockfile && pnpm --filter=shared build && cd dashboard && pnpm build",
    "watchPatterns": [
      "/dashboard/**",
      "/shared/**"
    ]
  },
  "deploy": {
    "startCommand": "cd dashboard && pnpm preview --host 0.0.0.0 --port ${PORT:-5173}",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}