---
export interface Props {
  tags?: string[] | null
}

const { tags } = Astro.props
---

{
  tags && tags.length > 0 && (
    <section class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-700">
      <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">Etiquetas</h3>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag: string) => (
          <span class="rounded-full bg-gray-100 px-3 py-1 text-sm text-gray-700 dark:bg-gray-700 dark:text-gray-300">
            {tag}
          </span>
        ))}
      </div>
    </section>
  )
}
