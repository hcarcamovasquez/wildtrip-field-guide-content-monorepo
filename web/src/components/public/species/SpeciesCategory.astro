---
import type { PublicDetailSpecie } from '../../../lib/public/repositories/SpeciesRepository'
import { getMainGroupLabel } from '@wildtrip/shared'

interface Props {
  species: PublicDetailSpecie
}

const { species } = Astro.props
---

{
  (species.mainGroup || species.specificCategory) && (
    <section class="mb-8">
      <h2 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white">Categoría</h2>
      <div class="rounded-lg bg-gray-50 p-4 dark:bg-gray-800">
        <dl class="space-y-2 text-sm text-gray-700 dark:text-gray-300">
          {species.mainGroup && (
            <div>
              <dt class="inline font-medium text-gray-900 dark:text-white">Grupo principal:</dt>{' '}
              <dd class="inline">{getMainGroupLabel(species.mainGroup)}</dd>
            </div>
          )}
          {species.specificCategory && (
            <div>
              <dt class="inline font-medium text-gray-900 dark:text-white">Categoría específica:</dt>{' '}
              <dd class="inline">{species.specificCategory}</dd>
            </div>
          )}
        </dl>
      </div>
    </section>
  )
}
