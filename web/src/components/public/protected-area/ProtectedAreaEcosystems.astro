---
export interface Props {
  ecosystems?: string[]
}

const { ecosystems } = Astro.props
---

{
  ecosystems && ecosystems.length > 0 && (
    <section class="mb-8">
      <h2 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white">Ecosistemas</h2>
      <div class="flex flex-wrap gap-2">
        {ecosystems.map((ecosystem) => (
          <span class="rounded-lg bg-green-100 px-3 py-2 text-sm text-green-800 dark:bg-green-900/30 dark:text-green-300">
            {ecosystem}
          </span>
        ))}
      </div>
    </section>
  )
}
