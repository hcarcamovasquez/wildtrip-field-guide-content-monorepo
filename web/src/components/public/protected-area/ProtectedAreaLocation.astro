---
export interface Props {
  location?: any
}

const { location } = Astro.props
---

{
  location && (
    <section class="mb-8">
      <h2 class="mb-4 text-2xl font-bold text-gray-900 dark:text-white">Ubicaci√≥n</h2>
      <div class="rounded-lg bg-gray-200 p-8 text-center dark:bg-gray-800">
        <p class="text-gray-600 dark:text-gray-300">
          {location &&
            typeof location === 'object' &&
            'type' in location &&
            location.type === 'Point' &&
            'coordinates' in location &&
            Array.isArray(location.coordinates) &&
            `Coordenadas: ${location.coordinates[1]}, ${location.coordinates[0]}`}
        </p>
      </div>
    </section>
  )
}
