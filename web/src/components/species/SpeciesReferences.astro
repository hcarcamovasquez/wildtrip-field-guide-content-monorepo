---
import type { PublicDetailSpecie } from '../../lib/repositories/SpeciesRepository'

interface Props {
  species: PublicDetailSpecie
}

const { species } = Astro.props
---

{
  species.references && species.references.length > 0 && (
    <section class="mb-6">
      <h2 class="mb-4 text-xl font-semibold text-gray-900 dark:text-white">Referencias</h2>
      <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 dark:border-gray-700 dark:bg-gray-800/50">
        <ul class="space-y-2">
          {species.references.map((ref) => (
            <li class="flex items-start gap-2">
              <span class="mt-1.5 block h-1.5 w-1.5 flex-shrink-0 rounded-full bg-gray-400 dark:bg-gray-500" />
              <a
                href={ref.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-blue-600 hover:text-blue-800 hover:underline dark:text-blue-400 dark:hover:text-blue-300"
              >
                {ref.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </section>
  )
}