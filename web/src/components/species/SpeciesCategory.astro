---
import type { PublicDetailSpecie } from '../../lib/repositories/SpeciesRepository'
import { getMainGroupLabel } from '@wildtrip/shared'

interface Props {
  species: PublicDetailSpecie
}

const { species } = Astro.props
---

{
  (species.mainGroup || species.specificCategory) && (
    <section class="mb-6">
      <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 dark:border-gray-700 dark:bg-gray-800/50">
        <div class="flex flex-wrap gap-3">
          {species.mainGroup && (
            <div class="flex items-center gap-2">
              <span class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400">
                Grupo:
              </span>
              <span class="rounded-md bg-blue-100 px-2.5 py-1 text-sm font-medium text-blue-800 dark:bg-blue-900/30 dark:text-blue-400">
                {getMainGroupLabel(species.mainGroup)}
              </span>
            </div>
          )}
          {species.specificCategory && (
            <div class="flex items-center gap-2">
              <span class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400">
                Categor√≠a:
              </span>
              <span class="rounded-md bg-purple-100 px-2.5 py-1 text-sm font-medium text-purple-800 dark:bg-purple-900/30 dark:text-purple-400">
                {species.specificCategory}
              </span>
            </div>
          )}
        </div>
      </div>
    </section>
  )
}