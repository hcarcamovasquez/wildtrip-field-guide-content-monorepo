---
import type { PublicDetailSpecie } from '../../lib/repositories/SpeciesRepository'
import type { ConservationStatus } from '@wildtrip/shared'

interface Props {
  species: PublicDetailSpecie
  conservationStatuses: ConservationStatus[]
}

const { species, conservationStatuses } = Astro.props

const getConservationStatus = (value: string) => {
  return conservationStatuses.find((status) => status.value === value)
}

const conservationStatus = species.conservationStatus ? getConservationStatus(species.conservationStatus) : null

// Define colors for conservation status
const getStatusColor = (status: string | undefined) => {
  if (!status) return 'bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400'
  
  switch (status) {
    case 'critically_endangered':
      return 'bg-red-50 text-red-700 dark:bg-red-900/20 dark:text-red-400'
    case 'endangered':
      return 'bg-orange-50 text-orange-700 dark:bg-orange-900/20 dark:text-orange-400'
    case 'vulnerable':
      return 'bg-yellow-50 text-yellow-700 dark:bg-yellow-900/20 dark:text-yellow-400'
    case 'near_threatened':
      return 'bg-blue-50 text-blue-700 dark:bg-blue-900/20 dark:text-blue-400'
    case 'least_concern':
      return 'bg-green-50 text-green-700 dark:bg-green-900/20 dark:text-green-400'
    default:
      return 'bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400'
  }
}
---

<section class="mb-6">
  <div class="rounded-lg border border-gray-200 bg-gray-50 p-4 dark:border-gray-700 dark:bg-gray-800/50">
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <!-- Taxonomic Classification -->
      <div>
        <h3 class="mb-3 text-sm font-semibold uppercase tracking-wider text-gray-600 dark:text-gray-400">
          Clasificación Taxonómica
        </h3>
        <dl class="space-y-1.5 text-sm">
          {species.kingdom && (
            <div class="flex">
              <dt class="w-20 font-medium text-gray-500 dark:text-gray-400">Reino:</dt>
              <dd class="text-gray-900 dark:text-gray-200">{species.kingdom}</dd>
            </div>
          )}
          {species.phylum && (
            <div class="flex">
              <dt class="w-20 font-medium text-gray-500 dark:text-gray-400">Filo:</dt>
              <dd class="text-gray-900 dark:text-gray-200">{species.phylum}</dd>
            </div>
          )}
          {species.class && (
            <div class="flex">
              <dt class="w-20 font-medium text-gray-500 dark:text-gray-400">Clase:</dt>
              <dd class="text-gray-900 dark:text-gray-200">{species.class}</dd>
            </div>
          )}
          {species.order && (
            <div class="flex">
              <dt class="w-20 font-medium text-gray-500 dark:text-gray-400">Orden:</dt>
              <dd class="text-gray-900 dark:text-gray-200">{species.order}</dd>
            </div>
          )}
          {species.family && (
            <div class="flex">
              <dt class="w-20 font-medium text-gray-500 dark:text-gray-400">Familia:</dt>
              <dd class="text-gray-900 dark:text-gray-200">{species.family}</dd>
            </div>
          )}
        </dl>
      </div>

      <!-- Conservation Status -->
      <div>
        <h3 class="mb-3 text-sm font-semibold uppercase tracking-wider text-gray-600 dark:text-gray-400">
          Estado de Conservación
        </h3>
        {conservationStatus ? (
          <div class="space-y-2">
            <span class={`inline-block rounded-md px-2.5 py-1 text-sm font-medium ${getStatusColor(species.conservationStatus)}`}>
              {conservationStatus.label}
            </span>
            {conservationStatus.description && (
              <p class="text-xs text-gray-600 dark:text-gray-400">
                {conservationStatus.description}
              </p>
            )}
          </div>
        ) : (
          <span class="text-sm text-gray-500 dark:text-gray-400">No evaluado</span>
        )}
      </div>
    </div>
  </div>
</section>